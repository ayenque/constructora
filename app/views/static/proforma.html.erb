<form>
  <div class="form-row">
    <div class="col-md-4 mb-3">
      <label for="validationDefault01">Nombre</label>
      <input type="text" class="form-control" id="validationDefault01" placeholder="" value="" required>
    </div>
    <div class="col-md-4 mb-3">
      <label for="validationDefault02">Apellido</label>
      <input type="text" class="form-control" id="validationDefault02" placeholder="" value="" required>
    </div>
    <div class="col-md-4 mb-3">
      <label for="validationDefaultUsername">Número de Identidad</label>
      <div class="input-group">
        <div class="input-group-prepend">
          
        </div>
        <input type="text" class="form-control" id="validationDefaultUsername" placeholder="" aria-describedby="inputGroupPrepend2" required>
      </div>
    </div>
  </div>
  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label for="validationDefault03">Correo electrónico</label>
      <input type="text" class="form-control" id="validationDefault03" placeholder="juan.perez@grupo5.com" required>
    </div>
    <div class="col-md-3 mb-3">
      <label for="validationDefault04">Celular</label>
      <input type="text" class="form-control" id="validationDefault04" placeholder="987654321" required>
    </div>
    <div class="col-md-3 mb-3">
      <label for="validationDefault05">Departamento</label>
      <input type="text" class="form-control" id="validationDefault05" placeholder="Dpto" required>
    </div>
  </div>
  <div class="form-group">
  
  </div>
  <button class="btn btn-primary" type="submit">Calcular Costo Departamento</button>
</form>