<p id="notice"><%= notice %></p>

<h1>Departamentos</h1>
<p align="right">
  <%= link_to 'Regresar a Proyectos', proyectos_path, :class => "btn btn-warning" %>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Numdpto</th>
      <th>Piso</th>
      <th>Características</th>
      <th>Precio</th>
      <th>Area</th>
      <th>Numdormitorio</th>
      <th>Proyecto</th>
      <th colspan="3"> </th>
    </tr>
  </thead>

  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td><%= departamento.numdpto %></td>
        <td><%= departamento.piso %></td>
        <td><%= departamento.descripcion %></td>
        <td><%= departamento.precio %></td>
        <td><%= departamento.area %></td>
        <td><%= departamento.numdormitorio %></td>
        <td><%= departamento.proyecto.nombre %></td>
        <td><%= link_to('Mostrar', departamento_path(departamento,:proyecto_id => @proyecto_id)) %></td>
     
        <td><%= link_to('Editar', edit_departamento_path(departamento,:proyecto_id => @proyecto_id)) %></td>

        <td><%= link_to 'Eliminar', departamento, method: :delete, data: { confirm: 'Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to('Nuevo departamento', new_departamento_path(:proyecto_id => @proyecto.id), :class => "btn btn-outline-primary" )  %>

