<%= form_for :contact, :html => { :method => :post, :class => "needs-validation", :novalidate => "novalidate" }, :url => { :controller => "static", :action => "mimetodo" } do |f| %>
<div class="container">
  <div class="row">

      <div class="col-sm-10">
          <div class="row">
             
              <div class="col-sm-2">
                <div class="form-group">
                    <select class="form-control form-control-lg form-control-a" id="exampleFormControlSelect1" value="Zona">
                    <option>Zona</option>
                    <option>Barranco</option>
                    <option>Miraflores</option>
                    <option>San Isidro</option>
                    <option>La Molina</option>
                    </select>
                </div>
              </div>
              
              <div class="col-sm-3">
                <div class="form-group">
                    <select class="form-control form-control-lg form-control-a" id="exampleFormControlSelect1" value="Proyecto">
                    <option>Proyecto</option>
                    <option>Proyecto 1</option>
                    <option>Proyecto 3</option>
                    <option>Proyecto 4</option>
                    <option>Proyecto 5</option>
                    </select>
                </div>
              </div>

              <div class="col-sm-2"> 
                <div class="form-group">
                    <%= f.number_field :precio, { :class => "form-control form-control-lg form-control-a", :placeholder => "Precio" } %>
                </div>
              </div>

              <div class="col-sm-2">
                <div class="form-group">
                    <%= f.number_field :area, { :class => "form-control form-control-lg form-control-a", :placeholder => "Área" } %>
                </div>
              </div>

              <div class="col-sm-3">      
                <div class="form-group">
                    <%= f.number_field :num_hab, { :class => "form-control form-control-lg form-control-a", :placeholder => "Habitaciones" } %>
                </div>
              </div>

          </div>    
    </div>

    <div class="col-sm-2">   
          <div class="form-group">
              <%= f.submit "Buscar", :class => "btn btn-a" %>
          </div> 
    </div>

  </div>

</div>
<% end %>



