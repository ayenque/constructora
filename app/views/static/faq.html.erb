<%= content_for :head do %>
	<title>Login</title>
<% end %>

<%= content_for :intro do %>
	


<br>

<div class="card" align="center">
    <h3>Iniciar Sesión</h3>
    <div class="card-body">
        <h5>Ingrese sus credenciales:</h5>
        <%= form_for :upc, :html => { :method => :post, :class => "needs-validation", :novalidate => "novalidate" }, :url => { :controller => "static", :action => "mimetodo" } do |f| %>
            <div class="form-group">
                <%= f.text_field :name, { :class => "form-control", :placeholder => "Usuario" } %>
            </div>
            <div class="form-group">
                <%= f.text_field :lastname, { :class => "form-control", :placeholder => "Contraseña" } %>
            </div>
            <div class="form-group">
                <%= f.submit "Ingresar", :class => "btn btn-primary" %>
            </div>            
        <% end %>
    </div>
</div>

<% end %>

