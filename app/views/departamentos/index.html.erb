<p id="notice"><%= notice %></p>

<h1>Departamentos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Numdpto</th>
      <th>Piso</th>
      <th>Características</th>
      <th>Precio</th>
      <th>Area</th>
      <th>Numdormitorio</th>
      <th>Cod Proyecto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td><%= departamento.numdpto %></td>
        <td><%= departamento.piso %></td>
        <td><%= departamento.descripcion %></td>
        <td><%= departamento.precio %></td>
        <td><%= departamento.area %></td>
        <td><%= departamento.numdormitorio %></td>
        <td><%= departamento.proyecto_id %></td>
        <td><%= link_to 'Mostrar', departamento %></td>
        <td><%= link_to 'Editar', edit_departamento_path(departamento) %></td>
        <td><%= link_to 'Eliminar', departamento, method: :delete, data: { confirm: 'Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo departamento', new_departamento_path, :class => "btn btn-warning" %>
