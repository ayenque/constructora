<div class="title-box-d">
  <h3 class="title-d">Búsqueda
    <span class="color-d">de </span>Departamentos</h3>
</div>


<%= form_for :upc, :html => { :method => :post, :class => "needs-validation", :novalidate => "novalidate" }, :url => { :controller => "static", :action => "mimetodo" } do |f| %>

<div class="row">
  <div class="cols-6">
    <div class="form-group">
        <select class="form-control" id="exampleFormControlSelect1" value="Por zona">
        <option>Por zona</option>
        <option>Barranco</option>
        <option>Miraflores</option>
        <option>San Isidro</option>
        <option>La Molina</option>
        </select>
    </div>
  </div>
      
  <div class="cols-4">
    <div class="form-group">
        <select class="form-control" id="exampleFormControlSelect1" value="Por Proyecto">
        <option>Por proyecto</option>
        <option>Proyecto 1</option>
        <option>Proyecto 3</option>
        <option>Proyecto 4</option>
        <option>Proyecto 5</option>
        </select>
    </div>
  </div>
  <div class="cols-2"> 
    <div class="form-group">
        <%= f.number_field :precio, { :class => "form-control", :placeholder => "Por precio" } %>
    </div>
  </div>
  <div class="cols-2">
    <div class="form-group">
        <%= f.number_field :area, { :class => "form-control", :placeholder => "Por área" } %>
    </div>
  </div>
  <div class="cols-2">      
    <div class="form-group">
        <%= f.number_field :num_hab, { :class => "form-control", :placeholder => "Por número de habitaciones" } %>
    </div>
  </div>
   
    
    <div class="form-group">
        <%= f.submit "Buscar Departamentos", :class => "btn btn-success" %>
    </div> 
        

<% end %>



</div>  
